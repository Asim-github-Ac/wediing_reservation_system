<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserPanel.BookHotelAgree">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Add Requirements" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/urlagree"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/finalwdding"/>
            <EditText
                android:id="@+id/weddbook_name"
                style="@style/edittext"
                android:layout_marginTop="10dp"
                android:hint="Full Name"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/weddbook_address"
                style="@style/edittext"
                android:layout_marginTop="10dp"
                android:hint="Address"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/weddingbook_menu"
                style="@style/edittext"
                android:layout_marginTop="10dp"
                android:hint="Add Menu"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/weddingbook_description"
                style="@style/edittext"
                android:layout_marginTop="10dp"
                android:hint="Description..."
                android:inputType="textEmailAddress"/>
            <EditText
                android:id="@+id/weddingbook_phone"
                style="@style/edittext"
                android:layout_marginTop="10dp"
                android:hint="+92"
                android:inputType="text"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/nikahbook1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nikah Khawan"/>
                <CheckBox
                    android:id="@+id/djbook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dj"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/qawalbook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qawal"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/talorbook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tailor"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/sloonbook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sloon"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/photographatbook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo Grapher"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Calculate Bill"
                android:id="@+id/calculatebill"
                android:background="@drawable/rect_btn"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:layout_margin="15dp"
                android:textStyle="bold"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Confirm Order"
                android:id="@+id/confirm_button"
                android:background="@drawable/rect_btn"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:layout_margin="15dp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>